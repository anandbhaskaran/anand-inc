{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/@core/*"
            ],
            "@themeConfig": [
                "themeConfig.js"
            ],
            "@axios": [
                "src/plugins/axios.ts"
            ],
            "@user-variables": [
                "src/styles/variables.scss"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./custom_typings"
        ]
    },
    "compileOnSave": true,
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
